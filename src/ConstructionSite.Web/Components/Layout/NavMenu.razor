@using ConstructionSite.Web.Security
@using ConstructionSite.Shared
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ProtectedSessionStorage SessionStorage
@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ConstructionSite.Web</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView Policy="AdminOnly">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="users">
                        <span class="material-symbols-outlined" style="padding-right: 8px;">manage_accounts</span> Users
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Policy="@Permissions.ActivityTypes.View">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="activity-types">
                        <span class="material-symbols-outlined" style="padding-right: 8px;">settings</span> Activity Types
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Policy="@Permissions.Activities.View">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="activities">
                        <span class="material-symbols-outlined" style="padding-right: 8px;">browse_activity</span> Activities
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Policy="@Permissions.Activities.CreateForWorker">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="create-activity">
                        <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Add Activity
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>
